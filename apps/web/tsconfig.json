{
  "extends": "@medilink/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "paths": {
      "~/*": ["./src/*"],
      "@medilink/db/api": [
        "./src/__mocks__/convex-api-typed.ts",
        "../../packages/db/convex/_generated/api"
      ],
      "@medilink/db/dataModel": [
        "../../packages/db/convex/_generated/dataModel"
      ]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
