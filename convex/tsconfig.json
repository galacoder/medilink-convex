{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vite/client"],
    "paths": {}
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "_generated",
    "__tests__",
    "auth.ts",
    "auth.config.ts",
    "convex.config.ts"
  ]
}
